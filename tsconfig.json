{
    "version": "1.4.1",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./resources/js"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./resources/ts/bitmap.ts",
        "./resources/ts/camera.ts",
        "./resources/ts/controls.ts",
        "./resources/ts/gameloop.ts",
        "./resources/ts/main.ts",
        "./resources/ts/map.ts",
        "./resources/ts/player.ts",
        "./resources/ts/virtualkeys.ts",
    ],
    "compileOnSave": true
}
